<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.gox.basemodule.common.manage_address.ManageAddressViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/title_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_foodie_home"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableTint="@color/grey"
                android:gravity="center"
                tools:text="Home"
                style="@style/SmallText"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                tools:text="Skksksk"
                style="@style/VerySmallText"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_mangeaddress_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/edit"
                    style="@style/SmallText"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/delete_manageaddrs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/delete"
                    style="@style/SmallText"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>